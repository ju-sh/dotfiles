general {
        colors = true
        interval = 5
}

order += "volume master"
order += "wireless wlp4s0"
order += "ethernet eth0"
order += "cpu_usage"
order += "battery 1"
order += "time"

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: â›”(%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless wlp4s0 {
        format_up = "W: %essid (%quality)"
        #format_up = "W: %essid (%quality, %bitrate)"
        format_down = "W: down"
}

ethernet eth0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

cpu_usage {
        format = "CPU %usage"
}

battery 1 {
        # don't show decimal places in remaining battery percentage
        integer_battery_capacity = true

        # consider last full capacity as 100%
        last_full_capacity = true

        # don't show seconds in remaining time
        hide_seconds = true

        format = "%status %percentage (+%remaining) U: %consumption"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = "15"
}

time {
        format = "%H:%M %a %d %b %Y"
}
